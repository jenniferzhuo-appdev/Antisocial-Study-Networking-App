<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bookmark spot #<%= @bookmark_spot.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bookmark_spots" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_bookmark_spot/<%= @bookmark_spot.id %>" class="btn btn-block btn-outline-secondary">
          Delete bookmark spot
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Favorite location
      </dt>
      <dd>
        <%= @bookmark_spot.favorite_location_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @bookmark_spot.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark_spot.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark_spot.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit bookmark spot
    </h2>

    <form action="/modify_bookmark_spot/<%= @bookmark_spot.id %>"  method="post" >
      <div class="form-group">
        <label for="favorite_location_id_box">
          Favorite location
        </label>

        <input type="text" id="favorite_location_id_box" name="favorite_location_id_from_query" class="form-control" value="<%= @bookmark_spot.favorite_location_id %>">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @bookmark_spot.user_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update bookmark spot
      </button>
    </form>
  </div>
</div>

<hr>
